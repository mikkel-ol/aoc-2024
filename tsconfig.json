{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["main.ts", "./calendar/**/*"],
  "exclude": ["node_modules", "dist"]
}
